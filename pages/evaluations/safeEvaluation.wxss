.swiper-tab {
  text-align: center;
  background-color: #f7f7f7;
  line-height: 35px;
}

.tab-list-left {
  font-size: 30rpx;
  display: inline-block;
  width: 25%;
  border: 1px solid #416ce4;
  line-height: 60rpx;
  color: #416ce4;
}

.tab-list-right {
  line-height: 60rpx;
  font-size: 30rpx;
  display: inline-block;
  width: 25%;
  border: 1px solid #416ce4;
  color: #416ce4;
}

.on {
  color: #fff;
  background-color: #416ce4;
}

.table {
  margin-top: 50rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  border: 0px solid #416ce4;
}

.tr {
  display: flex;
  width: 100%;
  justify-content: center;
  align-items: center;
  color: #416ce4;
}
.td{
  display: flex;
  align-items: center;
  min-height: 3rem;
  width: 25%;
  justify-content: center;
  font-size: .8em;
  border: 1rpx solid #8ca9fa;
}
.bg-w{
  background: snow;
}
.bg-g{
  background: #668efa;
  color: #fff;
}
.th{
  display: flex;
  align-items: center;
  width: 25%;
  justify-content: center;
  background: #416ce4;
  color: #fff;
  height: 3rem;
  border: 1rpx solid #668efa;
}